@model WebApplication1.Models.JobRequirementsMV

@{
    ViewBag.Title = "Job Requirements";
}

<div class="container">
    <div class="section-top-border">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <h3 class="mb-30">New Job Requirements</h3>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="mt-10">
                            Enter Job Requirements
                            <div class="form-group">

                                @Html.DropDownList("JobRequirementID", null, "Select Requirements", new { @class = "form-control single-input" })
                                @*{
                                       htmlAttributes = new
                                       {
                                           @class = "form-control single-input",

                                       }
                                })*@
                                @Html.ValidationMessageFor(model => model.JobRequirementID, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.PostJobID)
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="mt-10">
                            @Html.EditorFor(model => model.JobRequirementDetails, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control single-input",
                                      type = "text",
                                      name = "first_name",
                                      placeholder = "Enter Selected Requirements Details",
                                      onfocus = "this.placeholder = ''",
                                      onblur = "this.placeholder = 'Enter Selected Requirements Details'",

                                }
                              })
                            @Html.ValidationMessageFor(model => model.JobRequirementDetails, "", new { @class = "text-danger" })
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="genric-btn info-border e-large" style="float:right;" />
                                @Html.ActionLink("Back to List", "CompanyJobList", null, new { @class = "btn head-btn2", @style = "float:left;" })
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>





    <h2 class="text-center">Job Requirement Details</h2>
    <div class="container">

        <table class="table table-hover table-bordered table-striped">
            <tr>
                <th>
                    Requirement Title
                </th>
                <th>
                    Details
                </th>
                <th>
                    Action
                </th>
            </tr>

            @foreach (var item in Model.Details)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobRequirementsTable.JobRequirementTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobRequirementDetails)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteRequirements", new { id = item.JobRequirementDetailID }, new { @class = "genric-btn danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
