@model WebApplication1.Models.SkillsMV
@{
    ViewBag.Title = "AddSkills";
}


<div class="container">
        <div class="section-top-border">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <h3 class="mb-30">Add Candidate New Skills</h3>

                    @using (Html.BeginForm("AddSkills","Skill",FormMethod.Post, new { @class = "form-contact", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="mt-10">
                                Add New Skills
                                @Html.EditorFor(model => model.SkillName, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control single-input",
                                          type = "text",
                                          name = "skillname",
                                          placeholder = "Enter New Skills",
                                          onfocus = "this.placeholder = ''",
                                          onblur = "this.placeholder = 'Enter New Skills'",

                                    }
                                  })
                                @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.EmployeeID)
                            </div>
                            <hr />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="genric-btn info-border e-large" style="float:left;" />
                                    @Html.ActionLink("Next", "ApplyJob","ApplyJob", new { id = Model.EmployeeID }, new { @class = "btn head-btn2", @style = "float:right;" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
</div>





<h2 class="text-center">Candidate Skill Details</h2>
<div class="container">

    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                Skill Name
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model.Details)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SkillName)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteSkills", new { id = item.SkillID }, new { @class = "genric-btn danger" })
                    </td>
                </tr>
        }

    </table>
</div>