@model WebApplication1.Models.UserMV
@{
    ViewBag.Title = "NewUser";
}



        <section class="contact-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="contact-title">Registration</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-8">
                        @using (Html.BeginForm("NewUser","User",FormMethod.Post, new { @class = "form-contact" , novalidate = "novalidate" }))
                        {
                            @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.UserName, new
                                    {
                                           htmlAttributes = new
                                           {
                                               @class = "form-control single-input",
                                               type = "text",
                                               name = "name",
                                               id = "name",
                                               placeholder = "Enter Your Name",
                                               onfocus = "this.placeholder = ''",
                                               onblur = "this.placeholder = 'Enter Your Name'",
                                               required = true
                                           }
                                    })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new
                                    {
                                    htmlAttributes = new
                                    {
                                       @class = "form-control single-input",
                                       type = "password",
                                       name = "password",
                                       id = "password",
                                       placeholder = "Enter Password",
                                       onfocus = "this.placeholder = ''",
                                       onblur = "this.placeholder = 'Enter Password'",
                                       required = true
                                    }
                                    })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ContactNo, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control single-input",
                                       type = "tel",
                                       name = "ContactNo",
                                       id = "ContactNo",
                                       placeholder = "Enter Contact Number",
                                       onfocus = "this.placeholder = ''",
                                       onblur = "this.placeholder = 'Enter Contact Number'",
                                       required = true
                                   }
                               })
                                    @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.EmailAddress, new
                                    {
                                    htmlAttributes = new
                                    {
                                       @class = "form-control single-input",
                                       type = "email",
                                       name = "email",
                                       id = "email",
                                       placeholder = "Enter Email Address",
                                       onfocus = "this.placeholder = ''",
                                       onblur = "this.placeholder = 'Enter Email Address'",
                                       required = true
                                    }
                                    })
                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div>
                                    <p>
                                        Are You a Job Provider ?
                                        @Html.EditorFor(model => model.AreYouProvider)
                                    </p>
                                </div>
                            </div>
                            <div class="col-sm-6" id="divcompanyname">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Company.CompanyName, new
                                            {
                                            htmlAttributes = new
                                            {
                                               @class = "form-control single-input",
                                               type = "text",
                                               name = "companyname",
                                               id = "companyname",
                                               placeholder = "Enter Company Title",
                                               onfocus = "this.placeholder = ''",
                                               onblur = "this.placeholder = 'Enter Company Title'",
                                               
                                            }
                                            })
                                    @Html.ValidationMessageFor(model => model.Company.CompanyName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6" id="divcompanyphoneno">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Company.ContactNo, new
                                            {
                                            htmlAttributes = new
                                            {
                                               @class = "form-control single-input",
                                               type = "tel",
                                               name = "companyphoneno",
                                               id = "companyphoneno",
                                               placeholder = "Enter Company Phone No",
                                               onfocus = "this.placeholder = ''",
                                               onblur = "this.placeholder = 'Enter Company Phone No'",
                                               
                                            }
                                            })
                                    @Html.ValidationMessageFor(model => model.Company.ContactNo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6" id="divcompanyemail">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Company.EmailAddress, new
                                            {
                                            htmlAttributes = new
                                            {
                                               @class = "form-control single-input",
                                               type = "text",
                                               name = "companyemail",
                                               id = "companyemail",
                                               placeholder = "Enter Company Email Address",
                                               onfocus = "this.placeholder = ''",
                                               onblur = "this.placeholder = 'Enter Company Email Address'",
                                               
                                            }
                                            })
                                    @Html.ValidationMessageFor(model => model.Company.EmailAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-12" id="divcompanydescription">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Company.Description, new
                                            {
                                            htmlAttributes = new
                                            {
                                               @class = "form-control single-input",
                                               type = "text",
                                               name = "companydescription",
                                               id = "companydescription",
                                               placeholder = "Enter Company Description",
                                               onfocus = "this.placeholder = ''",
                                               onblur = "this.placeholder = 'Enter Company Description'",
                                               
                                            }
                                            })
                                    @Html.ValidationMessageFor(model => model.Company.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                                <div class="form-group mt-3">
                                    <input type="submit"  value="Register" class="button button-contactForm boxed-btn" />
                                </div>
             
                        }
                    </div>
                        <div class="col-lg-3 offset-lg-1">
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-home"></i></span>
                                <div class="media-body">
                                    <h3>Kolkata, West Bengal.</h3>
                                    <p>India, 743502</p>
                                </div>
                            </div>
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                                <div class="media-body">
                                    <h3>+91 9064884480</h3>
                                    <p>Mon to Fri 9am to 6pm</p>
                                </div>
                            </div>
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-email"></i></span>
                                <div class="media-body">
                                    <h3>support@biswas.com</h3>
                                    <p>Send us your query anytime!</p>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </section>
<script src="~/Content/assets/js/jquery-3.3.1.js"></script>
<script>
    $(document).ready(function () {
        $("#divcompanyname").hide();
        $("#divcompanyemail").hide();
        $("#divcompanyphoneno").hide();
        $("#divcompanydescription").hide();
        $("#AreYouProvider").change(function () {
            if (this.checked) {
                $("#divcompanyname").show();
                $("#divcompanyemail").show();
                $("#divcompanyphoneno").show();
                $("#divcompanydescription").show();
            }
            else {
                $("#divcompanyname").hide();
                $("#divcompanyemail").hide();
                $("#divcompanyphoneno").hide();
                $("#divcompanydescription").hide();
            }
        });
    });
</script>

