@model WebApplication1.Models.ForgotPasswordMV
@{
    ViewBag.Title = "Forget";
}

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="job-category-listing mb-50">
                <div class="col-md-12">
                    <h2 class="contact-title" align="center">Forget Password</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                @using (Html.BeginForm("Forget", "User", FormMethod.Post, new { @class = "form-contact", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "form-control single-input",
                                           type = "text",
                                           name = "Email",
                                           id = "Email",
                                           placeholder = "Enter Email Address",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter Email Address'",
                                           required = true
                                       }
                                   })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Send Email" class="button button-contactForm boxed-btn" />
                    </div>
                }
            </div>

            <div class="col-md-6" style="padding:60px 0px 0px 60px;">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Kolkata, West Bengal.</h3>
                        <p>India, 743502</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+91 9064884480</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@biswas.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




