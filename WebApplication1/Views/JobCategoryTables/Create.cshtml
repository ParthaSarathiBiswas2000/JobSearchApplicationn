@model DatabaseLayer.JobCategoryTable

@{
    ViewBag.Title = "Create";
}
<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="mb-30">New Job Category</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mt-10">
                @Html.EditorFor(model => model.JobCategory, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control single-input",
                          type = "text",
                          name = "first_name",
                          placeholder = "Enter Job Category",
                          onfocus = "this.placeholder = ''",
                          onblur = "this.placeholder = 'Enter Job Category'",
                          required = true
                    }
                  })
                @Html.ValidationMessageFor(model => model.JobCategory, "", new { @class = "text-danger" })
            </div>
            <div class="mt-10">
                @Html.EditorFor(model => model.Description, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control single-input",
                          type = "text",
                          name = "first_name",
                          placeholder = "Enter Description",
                          onfocus = "this.placeholder = ''",
                          onblur = "this.placeholder = 'Enter Description'",
                          required = true
                    }
                  })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="genric-btn info-border e-large" style="float:right;" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn head-btn2", @style = "float:left;" })
                </div>
            </div>
        </div>
            }


        </div>
    </div>
</div>
