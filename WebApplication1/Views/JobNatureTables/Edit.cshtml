@model DatabaseLayer.JobNatureTable

@{
    ViewBag.Title = "Edit";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="mb-30">Edit Job Nature</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.JobNatureID)
                    <div class="mt-10">
                        @Html.EditorFor(model => model.JobNature, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control single-input",
                          type = "text",
                          name = "first_name",
                          placeholder = "Edit Job Nature",
                          onfocus = "this.placeholder = ''",
                          onblur = "this.placeholder = 'Edit Job Nature'",
                          required = true
                            }
                          })
                        @Html.ValidationMessageFor(model => model.JobNature, "", new { @class = "text-danger" })
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update" class="genric-btn primary-border e-large" style="float:right;" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn head-btn2", @style = "float:left;" })
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>