@model IEnumerable<DatabaseLayer.CountryTable>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Country List</h2>
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", new {}, new {@class="btn head-btn2"})
    </p>

    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>Operations</th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.CountryID }, new { @class = "genric-btn primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.CountryID }, new { @class = "genric-btn danger" })
            </td>
        </tr>
    }

    </table>
</div>
