@section Scripts {
    @if (TempData["Success"] != null)
    {
        <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Swal.fire({
                        title: 'Success !',
                        text: '@TempData["Success"]',
                        icon: 'success',
                        confirmButtonText: 'OK',
                    });
                });
        </script>
    }
    else if (TempData["Failed"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Notification !',
                    text: '@TempData["Failed"]',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                });
            });
        </script>
    }

    
}




