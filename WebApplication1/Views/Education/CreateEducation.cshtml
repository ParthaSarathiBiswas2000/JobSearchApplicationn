@model WebApplication1.Models.EducationMV
@{
    ViewBag.Title = "CreateEducation";
}

<script src="~/Content/assets/js/jquery-3.3.1.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@section Scripts {
    @if (TempData["Successedu"] != null)
    {
        <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Swal.fire({
                        title: 'Success !',
                        text: '@TempData["Successedu"]',
                        icon: 'success',
                        confirmButtonText: 'OK',
                    });
                });
        </script>
    }
    else if (TempData["Failededu"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Notification !',
                    text: '@TempData["Failededu"]',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                });
            });
        </script>
    }
}


<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Candidate Educational Details</h2>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm("CreateEducation", "Education", FormMethod.Post, new { @class = "form-contact", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                Employee Name
                                @Html.EditorFor(model => model.EmployeeName, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           @readonly = "readonly",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.EmployeeID)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Applied Job Title
                                @Html.EditorFor(model => model.JobName, new
                                {
                                htmlAttributes = new
                                {
                                   @class = "form-control single-input",
                                   @readonly = "readonly",
                                }
                                })
                                @Html.ValidationMessageFor(model => model.JobName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Applied Company Name
                                @Html.EditorFor(model => model.CompanyName, new
                              {
                               htmlAttributes = new
                               {
                                   @class = "form-control single-input",
                                   @readonly = "readonly",
                               }
                               })
                                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Institution Name
                                @Html.EditorFor(model => model.InstituteName, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "text",
                                           name = "institutionname",
                                           id = "institutionname",
                                           placeholder = "Enter Institution Name",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter Institution Name'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.InstituteName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Title of Education
                                @Html.EditorFor(model => model.TitleOfEducation, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "text",
                                           name = "titleofeducation",
                                           id = "titleofeducation",
                                           placeholder = "Enter Title of Education",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter Title of Education'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.TitleOfEducation, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Enter Degree
                                @Html.EditorFor(model => model.Degree, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "text",
                                           name = "degree",
                                           id = "degree",
                                           placeholder = "Enter Degree",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter Degree'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                From which year you started your course
                                @Html.EditorFor(model => model.FromYear, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "date",
                                           name = "fromdate",
                                           id = "fromdate",
                                           placeholder = "Enter Start Year",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter Start Year'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                To which year you completed your course
                                @Html.EditorFor(model => model.ToYear, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "date",
                                           name = "todate",
                                           id = "todate",
                                           placeholder = "Enter End Year",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter End Year'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.ToYear, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                Enter City
                                @Html.EditorFor(model => model.City, new
                                        {
                                        htmlAttributes = new
                                        {
                                           @class = "form-control single-input",
                                           type = "text",
                                           name = "city",
                                           id = "city",
                                           placeholder = "Enter City",
                                           onfocus = "this.placeholder = ''",
                                           onblur = "this.placeholder = 'Enter City'",

                                        }
                                        })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                Select Country
                                <div class="form-group">
                                    @Html.DropDownList("CountryID", null, "Select Country", new { @class = "form-control single-input" })
                                    @Html.ValidationMessageFor(model => model.CountryID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Save" class="button button-contactForm boxed-btn" />
                        @Html.ActionLink("Next", "Create","WorkExperience", new { id = Model.EmployeeID }, new { @class = "button button-contactForm boxed-btn", @style = "float:right;" })
                    </div>

                }
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Kolkata, West Bengal.</h3>
                        <p>India, 743502</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+91 9064884480</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@biswas.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
